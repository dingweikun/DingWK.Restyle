<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:opt="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <ResourceDictionary.MergedDictionaries>
        <!--<ResourceDictionary Source="/DingWK.Restyle;component/Assets/Font.xaml" />-->
        <ResourceDictionary Source="/DingWK.Restyle;component/Styles/Button.xaml" />
        <ResourceDictionary Source="/DingWK.Restyle;component/Styles/ListBox.xaml" />
    </ResourceDictionary.MergedDictionaries>


    <!-- default accent colors and brushes -->
    <Color x:Key="AccentColor">#1BA1E2</Color>
    <Color x:Key="AccentTextColor">#FFFFFF</Color>
    <SolidColorBrush x:Key="Accent" Color="{StaticResource AccentColor}" opt:Freeze="True"/>
    <SolidColorBrush x:Key="AccentText" Color="{StaticResource AccentTextColor}" opt:Freeze="True"/>


    <!--Close system button-->
    <sys:Double x:Key="CloseButtonWidth">32</sys:Double>

    <!--System Button-->
    <sys:Double x:Key="SystemButtonHeight">24</sys:Double>
    <sys:Double x:Key="SystemButtonWidth">32</sys:Double>

</ResourceDictionary>
